<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>
    
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="AsEditTextStyle">@style/EditTextStyle</item>
    </style>
    
    <style name="EditTextStyle">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:textSize">28pt</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:singleLine">true</item>
    </style>
    
</resources>