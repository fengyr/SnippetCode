<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
        android:id="@+id/device_on_text"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_margin="2dip"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="@string/on_text"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/device_on_15_sec"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_15_sec"
            android:onClick="onClick" />
        <Button
            android:id="@+id/device_on_30_sec"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_30_sec"
            android:onClick="onClick" />
        <Button
            android:id="@+id/device_on_45_sec"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_45_sec"
            android:onClick="onClick" />
        <Button
            android:id="@+id/device_on_1_min"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_1_min"
            android:onClick="onClick" />
    </LinearLayout>
    <TextView
        android:id="@+id/device_suspend_text"
        android:layout_width="fill_parent"
        android:textSize="20sp"
        android:layout_height="30dip"
        android:textColor="#000000"
        android:text="@string/suspend_text"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/suspend_30_sec"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_30_sec"
            android:onClick="onClick" />
        <Button
            android:id="@+id/suspend_45_sec"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_45_sec"
            android:onClick="onClick" />
        <Button
            android:id="@+id/suspend_1_min"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_1_min"
            android:onClick="onClick" />
        <Button
            android:id="@+id/suspend_2_min"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/_2_min"
            android:onClick="onClick" />
    </LinearLayout>
    <Button
        android:id="@+id/control_button"
        android:layout_width="fill_parent" 
        android:layout_height="50dip"
        android:layout_margin="2dip"
        android:textSize="20sp" 
        android:text="@string/start"
        android:onClick="onClick" />
    <Button
        android:id="@+id/exit_button"
        android:layout_width="fill_parent" 
        android:layout_height="50dip"
        android:layout_margin="2dip"
        android:layout_gravity="bottom"
        android:textSize="20sp"
        android:text="@string/exit"
        android:onClick="onClick" />
	<TextView
		android:id="@+id/show_number"
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/number"
        android:textSize="400sp"
	/>
</LinearLayout>
